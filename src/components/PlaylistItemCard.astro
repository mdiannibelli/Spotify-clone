---
import type { Playlist } from '../lib/data'
import CardPlayButton from '../components/CardPlayButton'

interface Props {
    playlist: Playlist;
}
const {playlist} = Astro.props;
const {id, cover, title, artists} = playlist
const artistsString = artists.join(", ")
---
<article class="group relative shadow-lg hover:bg-zinc-800 hover:shadow-xl bg-zinc-500/30  rounded-md transition-all duration-300 ">
    <div class=`absolute right-4 bottom-20 translate-y-4 
    transition-all duration-500 opacity-0
    group-hover:translate-y-0 group-hover:opacity-100
    z-10
    `>
        <CardPlayButton size="" id={id} client:visible/>
    </div>
<a href={`/playlist/${id}`} class="playlist-item flex flex-col relative transition-all duration-300 overflow-hidden p-2 gap-2 pb-4  w-44"
transition:name=`playlist ${id} box`>
    <picture class="aspect-square w-full h-auto">
        <img src={cover} alt={`Cover of ${title} by ${artistsString}`}
         class="object-cover w-full h-full rounded-md"
         transition:name=`playlist ${id} image`> <!-- transicion a la siguiente pÃ¡gina -->
    </picture>

    <div class="flex flex-col truncate px-2">
        <h1 class="font-semibold text-sm" transition:name=`playlist ${playlist?.id}`>{title}</h1>
        <span class="text-xs text-gray-300" transition:name=`playlist ${playlist?.id} artists`>{artistsString}</span>
    </div>
</a>
</article>