---
import LibraryIcon from '../icons/library.astro';
import SearcherIcon from '../icons/searcher.astro';
import HomeIcon from '../icons/home-icon.astro';
import SideMenuItem from '../components/SideMenuItem.astro';
import SideMenuCard from '../components/SideMenuCard.astro';
import {playlists} from '../lib/data'
---
<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <SideMenuItem href='/'>
                <HomeIcon class="size-6 fill-zinc-400 hover:fill-zinc-100"/>
                Inicio
            </SideMenuItem>
            <SideMenuItem href='/#'>
                <SearcherIcon class="size-6 fill-zinc-400 hover:fill-zinc-100"/>
                Buscar
            </SideMenuItem>
        </ul>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href='/#'>
                <LibraryIcon class="size-6 fill-zinc-400 hover:fill-zinc-100"/>
                Tu biblioteca
            </SideMenuItem>
        </ul>
        {
            playlists.map(playlist => <SideMenuCard playlist={playlist}/>)
        }
    </div>
</nav>