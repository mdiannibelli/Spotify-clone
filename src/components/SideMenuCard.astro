---
import type { Playlist } from '../lib/data'

interface Props {
    playlist: Playlist;
}

const {playlist} = Astro.props;
const {id, title, albumId, color, cover, artists} = playlist;

const artistsString = artists.join(", ")
---
<a href={`/playlist/${id}`} class="playlist-item flex p-2 items-center gap-5 rounded-md hover:bg-zinc-800">
    <picture class="h-12 w-12">
        <img src={cover} alt={`Cover of ${title} by ${artistsString}`} class="object-cover w-full h-full rounded-md">
    </picture>

    <div class="flex flex-col truncate">
        <h4 class="font-semibold text-sm">{title}</h1>
        <span class="text-xs text-gray-300">{artistsString}</span>
    </div>
</a>